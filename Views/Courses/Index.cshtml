

@model  List<CourseViewModel> 
          
    <h1>Cattalogo dei corsi</h1>

@foreach(CourseViewModel course in Model){
    <div class="row">

        <div class="col-md-1">
            <img src="@course.ImagePath" width="52" height="52">
        </div>

        <div class="col-md-5">
            <h2>@course.Title</h2>
            <author>@course.Author</author>
        </div>

        <div class="col-md-2">
            <i class="fas fa-star" style="color: yellow;"></i>
            <i class="fas fa-star" style="color: yellow;"></i>
            <i class="fas fa-star" style="color: yellow;"></i>
            <i class="fas fa-star" style="color: yellow;"></i>
            <i class="fas fa-star" style="color: yellow;"></i>          
        </div>

        <div class="col-md-2">
            EUR 10,99<br/>
            <s>12,99</s>
        </div>
        
        <div class="col-md-2">
        <a class="btn btn-outline-primary" asp-action="Detail" asp-controller="Courses" asp-route-id="5">Detaglio Corsi</a>   
        </div>

    </div>
}

    