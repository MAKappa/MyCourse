

@model  List<CourseViewModel> 

     <h1>@ViewBag.Title</h1>

    

    

@foreach(CourseViewModel course in Model)
{
    <div class="row">

        <div class="col-md-1">
            <img src="@course.ImagePath" width="52" height="52">
        </div>



        <div class="col-md-5">
            <h2>@course.Title</h2>
            <author>@course.Author</author>
        </div>



        <div class="col-md-2" @course.Title>
            
            @for (int i = 0; i <=5; i++)
            {
                if (@course.Rating >= i)
                {
                    <i class="fas fa-star" style="color: yellow;"></i>              
                }
                else if(@course.Rating > i - 1)
                {
                    <i class="fas fa-star-half" style="color: yellow;"></i> 
                }
                else
                {
                    <i class="far fa-star" style="color: yellow;"></i> 
                }         
            }
        </div>



        <div class="col-md-2">
            @course.CurrentPrice
            @if (!@course.CurrentPrice.Equals(course.FullPrice))
            {
               <br/><s>@course.FullPrice</s>
            }
        </div>



        <div class="col-md-2">
            <a class="btn btn-outline-primary" asp-action="Detail" asp-controller="Courses" asp-route-id="@course.Id">Detaglio Corsi</a>   
        </div>


    </div>


}

    