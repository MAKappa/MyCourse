

@model  List<CourseViewModel> 

<div class="row">
    <div class="col-md-8">
        <h1>@ViewBag.Title</h1>
    </div>

    <div class="col-md-4 d-flex align-items-center" >

    <form asp-controller="Courses" asp-action="Index" method="GET">
    <input type="text"  name="search"  placeholder="Cerca...">
    <button><i class="fas fa-search"></i></button>
    </form>
    </div>


</div>

    

@foreach(CourseViewModel course in Model)
{
    <div class="row">

        <div class="col-md-1">
            <img src="@course.ImagePath" width="52" height="52">
        </div>



        <div class="col-md-5">
            <h2>@course.Title</h2>
            <author>@course.Author</author>
        </div>



        <div class="col-md-2" @course.Title>
            
            @for (int i = 0; i <=5; i++)
            {
                if (@course.Rating >= i)
                {
                    <i class="fas fa-star" style="color: yellow;"></i>              
                }
                else if(@course.Rating > i - 1)
                {
                    <i class="fas fa-star-half" style="color: yellow;"></i> 
                }
                else
                {
                    <i class="far fa-star" style="color: yellow;"></i> 
                }         
            }
        </div>



        <div class="col-md-2">
            @course.CurrentPrice
            @if (!@course.CurrentPrice.Equals(course.FullPrice))
            {
               <br/><s>@course.FullPrice</s>
            }
        </div>

        <div class="col-md-2">
            <a class="btn btn-outline-primary" asp-action="Detail" asp-controller="Courses" asp-route-id="@course.Id">Detaglio Corsi</a>   
        </div>
    </div>

}


<nav aria-label="Paginazione">
    <ul class="pagination">
        <li class="page-item active" aria-current="page">
            <a class="page-link" asp-route-page="1">Page 1 <span class="sr-only">(current)</span></a>
        </li>
        <li class="page-item ">
            <a class="page-link" asp-route-page="2" >Page 2</a>
        </li>
        <li class="page-item">
            <a class="page-link" asp-route-page="3">Page 3</a>
        </li>
    </ul>
</nav>

    